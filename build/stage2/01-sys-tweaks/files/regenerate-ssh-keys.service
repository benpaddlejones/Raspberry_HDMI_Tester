[Unit]
Description=Regenerate SSH host keys on first boot
Before=ssh.service
ConditionFileIsDirectory=/etc/ssh
ConditionPathExists=!/etc/ssh/ssh_host_rsa_key

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'ssh-keygen -A && systemctl restart ssh'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target

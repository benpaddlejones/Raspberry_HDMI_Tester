{
  "name": "Raspberry Pi HDMI Tester Development",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  
  // Configure properties specific to VS Code
  "customizations": {
    "vscode": {
      // Extensions to install in the container
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker",
        "eamodio.gitlens",
        "ms-vscode.makefile-tools",
        "timonwong.shellcheck",
        "foxundermoon.shell-format"
      ],
      
      // Settings for the container
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "icon": "terminal-bash"
          }
        },
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "shellcheck.enable": true,
        "shellcheck.run": "onType",
        "github.copilot.chat.reviewSelection.instructions": [
          {
            "file": ".github/copilot-instructions.md",
            "when": "always"
          },
          {
            "file": ".github/copilot-general-instructions.md",
            "when": "always"
          },
          {
            "file": ".github/copilot-codespaces-instructions.md",
            "when": "always"
          }
        ]
      }
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created
  "postCreateCommand": "bash .devcontainer/post-create.sh",

  // Features to add to the dev container
  // Note: These features work alongside the Dockerfile
  // Some tools may already be in the Dockerfile - features add convenience
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": false
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  // Set container user
  "remoteUser": "vscode",
  
  // Configure tool-specific properties
  "mounts": [
    // Mount docker socket for Docker-in-Docker
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // Add required capabilities for image building
  "runArgs": [
    "--privileged"
  ],

  // Environment variables
  "containerEnv": {
    "DEBIAN_FRONTEND": "noninteractive",
    "TZ": "UTC"
  },

  // Increase shared memory size for building
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  }
}

[Unit]
Description=HDMI Audio Test - ALSA Output
After=sound.target

[Service]
Type=simple
User=pi
Group=audio
# Use ALSA for direct audio output
# Try HDMI first, will fallback to default device if HDMI not available
ExecStart=/usr/bin/mpv --loop=inf --no-video --ao=alsa --volume=100 /opt/hdmi-tester/audio.mp3
Restart=always
RestartSec=15
StandardOutput=journal
StandardError=journal
KillMode=mixed
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
